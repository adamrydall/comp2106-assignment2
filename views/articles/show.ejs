<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Article BLAH</h1>
    <form method="post" action="<%= article._id %>">
        <fieldset class="form-group">
            <label for="title" class="col-sm-2">Title: *</label>
            <input name="title" id="title" required value="<%= article.title %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="content" class="col-sm-2">Content: *</label>
            <textarea name="content" id="content" required><%= article.content %>
            </textarea>
        </fieldset>
        <div>
            <%= article.created %>
        </div>



    </form>
</main>

<%- include ../partials/footer.ejs %>